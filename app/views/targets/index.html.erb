<h1>Targets</h1>
<%= button_to "", new_target_path,:class => "fa fa-plus", :style => "border:none; font-size:30px; position: absolute;
  left: 1300px;",:method => :get %>
<div>
<br>
<br>
<table style="width: 90%" class="center">
<div id="targets">

  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Start date</th>
    <th>Finish date</th>
    <th>Team</th>
    <th>Status</th>
  </tr>
  <% @targets.each do |target| %>
    <tr>
    <% tm = Team.find_by(id:target.team) %> 
    <% team = nil %>
    <% unless tm == nil then%>
      <% team = tm.name %>
    <% end %>
    <td><%= target.title %></td>
    <td><%= target.description %></td>
    <td><%= target.start_date.strftime("%Y-%m-%d") %></td>
    <td><%= target.finish_date.strftime("%Y-%m-%d") %></td>
    <td><%= team %></td>
    <td><%= target.status %></td>
    
      <td><%= button_to "Show", target, :class => "button button4", :method => :get %></td>
  <td><%= button_to " Edit ", edit_target_path(target), :class => "button button4", :method => :get %></td>
  <td><%= button_to "Delete", target, :class => "button button4", :method => :delete %></td>
    </tr>
    
  <% end %>
</table>
</div>
