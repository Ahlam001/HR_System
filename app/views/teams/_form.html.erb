  </div>
<br>
  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>
<br>
  <div>
    <%= form.label :members, style: "display: block" %>
    <%= form.text_area :members %>
   
  </div>
<br>
  
   <div>
    <%= form.label :devision_id, style: "display: block" %>
    <%= form.collection_select :devision_id, Devision.all, :id, :name, include_blank: true  %>
  </div>
<br>
 <div>
    <%= form.label :team_lead, style: "display: block" %>
    <%= form.collection_select :team_lead, Employee.all, :id, :name, include_blank: true %>
  </div>
<br>
  <div>
    <%= form.submit %>
  </div>
  </div>
