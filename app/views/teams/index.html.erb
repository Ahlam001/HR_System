<h1>Teams</h1>

<%= button_to "",new_team_path,:class => "fa fa-plus", :style => "border:none; font-size:30px; position: absolute;
  left: 1300px;",:method => :get %>
<br>
<br>
<table style="width: 90%" class="center">
<div id="teams">
  
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Division </th>
    <th>Team lead </th>
    <th>Members </th>
  </tr>
  <% @teams.each do |team| %>
    <tr>
    <% div = Devision.find_by(id:team.devision_id) %>
  <% division = nil %>
  <% unless div == nil then%>
    <% division = div.name %>
  <% end %>
  <% employee = Employee.find_by(id:team.team_lead) %>
    <% lead = nil %>
    <% unless employee == nil then%>
      <% lead = employee.name %>
    <% end %>
    <td><%= team.name %></td>
    <td><%= team.description %></td>
    <td><%= division %></td>
    <td><%= lead %></td>
    <td><%= team.members%></td>
    
    
    
  <td><%= button_to "Show", team, :class => "button button4", :method => :get %></td>
  <td><%= button_to " Edit ", edit_team_path(team), :class => "button button4", :method => :get %></td>
  <td><%= button_to "Delete", team, :class => "button button4", :method => :delete %></td>
    </tr>
    
  <% end %>
</table>
</div>

