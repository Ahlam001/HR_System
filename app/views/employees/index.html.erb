
<p style="color: green"><%= notice %></p>
<style>
table, th, td {
  border: 1px solid black;
  border-collapse: collapse;
}
th, td {
  padding: 15px;
}
</style>
<h1>Employees</h1>
<table style="width: 90%">
<div id="employees">
<table>
<tr>
  <th>Name</th>
  <th>Email</th>
  <th>Job</th>
  <th>Salary</th>
  <th>Employment status</th>
  <th>Division</th>
  <th>Team</th>
  <th></th>
  <th></th>
  <th></th>
</tr>

<% @employees.each do |employee| %>
  <tr>
  <% div = Devision.find_by(id:employee.devision_id) %>
  <% devision = nil %>
  <% unless div == nil then%>
    <% devision = div.name %>
  <% end %>
  <% tm = Team.find_by(id:employee.team_id) %>
  <% team = nil %>
  <% unless tm == nil then%>
    <% team = tm.name %>
  <% end %>
  <td><%= employee.name %></td>
  <td><%= employee.email %></td>
  <td><%= employee.job %></td>
  <td><%= employee.salary %></td>
  <td><%= employee.employment_status %></td>
  <td><%= devision %></td>
  <td><%= team %></td>
   <td><%= link_to "Show", employee %> </td>
  <td><%= link_to "Edit", edit_employee_path(employee) %></td>
  <td><%= button_to "Delete", employee, method: :delete %></td>
  </tr>
  
<% end %>
</table>
</div>

<%= link_to "New employee", new_employee_path %>
